{
	"name": "React Snowpack Chrome Extension",
	"homepage_url": "https://github.com/bjesuiter/react-snowpack-chrome-extension",
	"description": "A Chrome extension for demonstrating a chrome extension build with react, typescript and snowpack",
	"manifest_version": 2,
	"version": "0.0.1",
	"icons": {
		"16": "assets/img/icon-16.png",
		"32": "assets/img/icon-32.png",
		"128": "assets/img/icon-128.png",
		"256": "assets/img/icon-256.png",
		"512": "assets/img/icon-512.png"
	},
	"background": {
		"scripts": ["/background.script.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"16": "assets/img/icon-16.png",
			"32": "assets/img/icon-32.png"
		},
		"default_title": "React Snowpack Chrome Extension"
	},
	"options_page": "options.html",
	"web_accessible_resources": [
		"assets/icons/*.png",
		"assets/img/*.png",
		"assets/error-htmls/illegal-or-missing-url.html"
	],
	"permissions": ["bookmarks", "notifications", "storage", "tabs"]
}
